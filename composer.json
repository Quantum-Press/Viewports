{
    "name": "qp/quantum-viewports",
    "type": "wordpress-plugin",
    "description": "Extend your BlockTheme to make standard block styles responsive!",
    "license": "non-public",
    "version": "0.9.8",
    "autoload": {
        "psr-4": {
            "QP\\Viewports\\": "includes/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "yoast/wp-test-utils": "^1.2",
        "squizlabs/php_codesniffer": "^3.13",
        "inpsyde/php-coding-standards": "^2.0"
    },
    "require": {
        "wikimedia/css-sanitizer": "^6.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs --standard=Inpsyde includes/"
    }
}
